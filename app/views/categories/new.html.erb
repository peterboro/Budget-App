<div class="container">
  <h1>New Category</h1>

  <%= form_with model: @category, local: true do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :icon %>
      <%= form.text_field :icon, class: "form-control" %>
    </div>
    <%= form.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>
