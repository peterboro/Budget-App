<section class="container">

  <% @transactions.each do |transaction| %>
      <div class="border border-1 d-flex my-3">
        <img src="data:image/png;base64," width= "80px">
        <h3 
          class="m-2"><%= transaction.category.name %> 
          <span class="d-block fs-6 fw-lighter mt-3"><%= "#{transaction.created_at.day}/#{transaction.created_at.month}/#{transaction.created_at.year}" %></span>
        </h3>
        <div class="ms-auto pt-5 pe-3">
          <%= number_to_currency(transaction.amount) %>
        </div>
      </div>
  <% end %>

  <div class="fixed-bottom mb-3 text-center">
   <%= link_to "New Transaction", new_category_transaction_path(@category), class:"btn btn-success fs-3 w-75"  %>
  </div>

</section>
